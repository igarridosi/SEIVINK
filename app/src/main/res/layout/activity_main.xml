<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Contenedor principal que permite el desplazamiento vertical -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Barra superior con Saludo y Notificación -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Hola!"
                    android:textSize="24sp"
                    android:fontFamily="@font/reddit_bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_bell"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2. Tarjeta de Balance Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_card_purple"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance Total"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.8"/>

                <TextView
                    android:id="@+id/total_balance_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,234.56"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:fontFamily="@font/reddit_bold"/>
            </LinearLayout>

            <!-- 3. Barra de Progreso de Ahorro -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_card_white"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso de Ahorro Mensual"
                    android:textColor="@color/black"
                    android:fontFamily="@font/reddit_bold"
                    android:textSize="18sp"/>

                <ProgressBar
                    android:id="@+id/savings_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="16dp"
                    android:progress="60"
                    android:progressDrawable="@drawable/bg_progress_bar_track"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/progress_percentage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60% Alcanzado"
                        android:textColor="@color/purple_primary"/>

                    <TextView
                        android:id="@+id/target_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$600 / $1000"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 4. Filtros de Transacciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ToggleButton
                    android:id="@+id/toggle_daily"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/daily_button_background_selector"
                    android:text="Diario"
                    android:textColor="@drawable/daily_button_text_color_selector"
                    android:textOn="Diario"
                    android:textOff="Diario"
                    android:checked="true"
                    android:layout_marginEnd="8dp"/>

                <ToggleButton
                    android:id="@+id/toggle_weekly"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_primary"
                    android:text="Semanal"
                    android:textColor="@drawable/daily_button_text_color_selector"
                    android:textOn="Semanal"
                    android:textOff="Semanal"
                    android:layout_marginEnd="8dp"/>

                <ToggleButton
                    android:id="@+id/toggle_monthly"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_primary"
                    android:text="Mensual"
                    android:textColor="@drawable/daily_button_text_color_selector"
                    android:textOn="Mensual"
                    android:textOff="Mensual"/>

            </LinearLayout>

            <!-- 5. Lista de Transacciones (Ejemplo estático) -->
            <!-- Más adelante, esto se reemplazará con un RecyclerView -->
            <LinearLayout
                android:id="@+id/transactions_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Transacción de Ejemplo 1 (Gasto) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_car_outline"
                        android:background="@drawable/bg_rounded_corners"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gasolina"
                            android:textColor="@color/black"
                            android:fontFamily="@font/reddit_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gasto"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-$50.00"
                        android:textColor="@color/red_expense"
                        android:fontFamily="@font/reddit_bold"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <!-- Transacción de Ejemplo 2 (Ingreso) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_money_stack"
                        android:background="@drawable/bg_rounded_corners"
                        android:padding="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salario"
                            android:textColor="@color/black"
                            android:fontFamily="@font/reddit_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingreso"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+$1200.00"
                        android:textColor="@color/green_income"
                        android:fontFamily="@font/reddit_bold"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 6. Barra de Navegación Inferior -->
    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_card_white"
        android:elevation="8dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Los ImageButton son mejores que ImageView si quieres efecto de click -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/purple_primary" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_wallet_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/darker_gray"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_car_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/darker_gray"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/bg_rounded_corners"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/darker_gray"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>