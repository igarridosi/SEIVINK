<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_primary"
    tools:context=".MainActivity">

    <!-- Top Bar (Welcome and Bell Icon) -->
    <RelativeLayout
        android:id="@+id/main_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back, Jonh"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/reddit_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                android:fontFamily="@font/reddit_regular"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/notification_bell"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bell"
            app:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Notifications" />

    </RelativeLayout>

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top_bar"
        android:layout_marginBottom="90dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Total Balance and Total Expense Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/purple_dark"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:baselineAligned="false">

                    <!-- Total Balance -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_wallet_outline"
                                app:tint="@color/gray_text"
                                android:contentDescription="Total Balance Icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Balance"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="@font/reddit_regular"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$7,783.00"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:fontFamily="@font/reddit_bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_text"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>

                    <!-- Total Expense -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_wallet_outline"
                                app:tint="@color/gray_text"
                                android:contentDescription="Total Expense Icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Expense"
                                android:textColor="@color/gray_text"
                                android:textSize="14sp"
                                android:fontFamily="@font/reddit_regular"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-$1,187.40"
                            android:textColor="@color/red_expense"
                            android:textSize="24sp"
                            android:fontFamily="@font/reddit_bold"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Progress Bar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textColor="@color/green_income"
                        android:textSize="14sp"
                        android:fontFamily="@font/reddit_bold"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$20,000.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/reddit_bold"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/expense_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    android:progress="30"
                    android:max="100"
                    android:progressDrawable="@drawable/bg_progress_bar_fill"
                    android:background="@drawable/bg_progress_bar_track" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_box"
                        app:tint="@color/green_income"
                        android:contentDescription="Checkmark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30% Of Your Expenses, Looks Good."
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/reddit_regular"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Savings and Revenue/Food Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:weightSum="2">

                <!-- Savings On Goals Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/purple_dark"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_car_outline"
                            app:tint="@color/white"
                            android:contentDescription="Savings Icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Savings"
                            android:textColor="@color/gray_text"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="On Goals"
                            android:textColor="@color/gray_text"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Revenue Last Week & Food Last Week Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/purple_dark"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Revenue Last Week -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_money_stack"
                                app:tint="@color/green_income"
                                android:contentDescription="Revenue Icon"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Revenue Last Week"
                                    android:textColor="@color/gray_text"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/reddit_regular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$4.000.00"
                                    android:textColor="@color/green_income"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/reddit_bold"/>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_text"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <!-- Food Last Week -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_food_fork_knife"
                                app:tint="@color/red_expense"
                                android:contentDescription="Food Icon"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="8dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Food Last Week"
                                    android:textColor="@color/gray_text"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/reddit_regular"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-$100.00"
                                    android:textColor="@color/red_expense"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/reddit_bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Daily/Weekly/Monthly Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal">

                <ToggleButton
                    android:id="@+id/btn_daily"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:textOn="Daily"
                    android:textOff="Daily"
                    android:text="Daily"
                    android:background="@drawable/daily_button_background_selector"
                    android:textColor="@color/daily_button_text_color_selector"
                    android:fontFamily="@font/reddit_bold"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:checked="true"
                    android:layout_marginEnd="8dp" />

                <ToggleButton
                    android:id="@+id/btn_weekly"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:textOn="Weekly"
                    android:textOff="Weekly"
                    android:text="Weekly"
                    android:background="@drawable/daily_button_background_selector"
                    android:textColor="@color/daily_button_text_color_selector"
                    android:fontFamily="@font/reddit_bold"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <ToggleButton
                    android:id="@+id/btn_monthly"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:textOn="Monthly"
                    android:textOff="Monthly"
                    android:text="Monthly"
                    android:background="@drawable/daily_button_background_selector"
                    android:textColor="@color/daily_button_text_color_selector"
                    android:fontFamily="@font/reddit_bold"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Transactions List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp">

                <!-- Transaction Item 1: Salary -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/purple_light"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_money_stack"
                            app:tint="@color/purple_dark"
                            android:layout_gravity="center"
                            android:contentDescription="Salary Icon"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salary"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/reddit_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:27 - April 30"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$4.000,00"
                            android:textColor="@color/green_income"
                            android:textSize="18sp"
                            android:fontFamily="@font/reddit_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_text"
                    android:layout_marginVertical="8dp"/>

                <!-- Transaction Item 2: Groceries -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/purple_light"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_shopping_bag"
                            app:tint="@color/purple_dark"
                            android:layout_gravity="center"
                            android:contentDescription="Groceries Icon"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Groceries"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/reddit_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17:00 - April 24"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pantry"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-$100,00"
                            android:textColor="@color/red_expense"
                            android:textSize="18sp"
                            android:fontFamily="@font/reddit_bold"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_text"
                    android:layout_marginVertical="8dp"/>

                <!-- Transaction Item 3: Rent -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="@color/purple_light"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_home"
                            app:tint="@color/purple_dark"
                            android:layout_gravity="center"
                            android:contentDescription="Rent Icon"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rent"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/reddit_bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:30 - April 15"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rent"
                            android:textColor="@color/gray_dark"
                            android:textSize="14sp"
                            android:fontFamily="@font/reddit_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-$674,40"
                            android:textColor="@color/red_expense"
                            android:textSize="18sp"
                            android:fontFamily="@font/reddit_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="5">

            <!-- Home (Active) -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_home"
                    app:tint="@color/purple_primary"
                    android:contentDescription="Home" />
            </LinearLayout>

            <!-- Statistics -->
            <LinearLayout
                android:id="@+id/nav_stats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_stats"
                    app:tint="@color/gray_dark"
                    android:contentDescription="Statistics" />
            </LinearLayout>

            <!-- Transfer (Middle Icon) -->
            <LinearLayout
                android:id="@+id/nav_transfer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_transfer"
                    app:tint="@color/gray_dark"
                    android:contentDescription="Transfer" />
            </LinearLayout>

            <!-- Wallet -->
            <LinearLayout
                android:id="@+id/nav_wallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_wallet_stack"
                    app:tint="@color/gray_dark"
                    android:contentDescription="Wallet" />
            </LinearLayout>

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/gray_dark"
                    android:contentDescription="Profile" />
            </LinearLayout>

